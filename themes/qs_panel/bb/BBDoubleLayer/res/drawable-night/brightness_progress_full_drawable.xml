<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@null"
        android:gravity="fill_horizontal|center">
        <shape android:shape="rectangle">
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
            <size android:height="48.0dip" />
            <gradient
                android:angle="0.0"
                android:endColor="@*android:color/qs_color_accent_secondary"
                android:startColor="@*android:color/qs_color_accent_primary" />
        </shape>
    </item>
    <item android:gravity="fill_horizontal|center">
        <shape android:shape="rectangle">
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
            <size android:height="48.0dip" />
            <solid android:color="#40000000" />
        </shape>
    </item>
    <item
        android:end="4.5dip"
        android:gravity="fill_horizontal|center"
        android:start="4.5dip">
        <shape android:shape="rectangle">
            <corners android:radius="@*android:dimen/qs_corner_radius_left" />
            <size android:height="40.0dip" />
            <gradient
                android:angle="0.0"
                android:endColor="@*android:color/qs_color_accent_secondary"
                android:startColor="@*android:color/qs_color_accent_primary" />
        </shape>
    </item>
</layer-list>