<?xml version="1.0" encoding="utf-8" ?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item>
        <shape>
            <solid android:color="#00000000" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:end="44dp"
        android:start="44dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315.0"
                android:endColor="@*android:color/qs_color_accent_secondary"
                android:startColor="@*android:color/qs_color_accent_primary" />
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:end="44dp"
        android:start="44dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/system_neutral2_10" />
            <corners android:radius="@*android:dimen/qs_corner_radius_right" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:end="6dp"
        android:start="6dp"
        android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/system_neutral2_10" />
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
        </shape>
    </item>
</ripple>
