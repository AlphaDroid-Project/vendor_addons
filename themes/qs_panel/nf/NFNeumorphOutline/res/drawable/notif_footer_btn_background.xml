<?xml version="1.0" encoding="utf-8" ?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item
        android:bottom="2.0dp"
        android:top="2.0dp">
        <shape
            android:shape="rectangle"
            android:tintMode="src_atop">
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
            <gradient
                android:angle="0.0"
                android:endColor="@*android:color/qs_color_accent_secondary"
                android:startColor="@*android:color/qs_color_accent_primary" />
        </shape>
    </item>
    <item
        android:bottom="4.0dp"
        android:end="2.0dp"
        android:start="2.0dp"
        android:top="4.0dp">
        <shape
            android:shape="rectangle"
            android:tintMode="src_atop">
            <gradient
                android:angle="270.0"
                android:endColor="@*android:color/qs_color_accent_secondary"
                android:startColor="@*android:color/qs_color_accent_primary" />
            <corners android:radius="@*android:dimen/qs_corner_radius_right" />
        </shape>
    </item>
    <item
        android:bottom="5.5dp"
        android:left="3.5dp"
        android:right="3.5dp"
        android:top="5.5dp">
        <shape
            android:shape="rectangle"
            android:tintMode="src_atop">
            <gradient
                android:angle="90.0"
                android:endColor="#FFF0F0F0"
                android:startColor="#FFD4D4D4" />
            <corners android:radius="@*android:dimen/qs_corner_radius_left" />
            <padding
                android:left="20dp"
                android:right="20dp" />
        </shape>
    </item>
</ripple>
