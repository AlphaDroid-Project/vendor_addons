<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315.0"
                android:endColor="@*android:color/qs_color_accent_secondary"
                android:startColor="@*android:color/qs_color_accent_primary" />
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:end="2dp"
        android:start="2dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#B3000000"
                android:startColor="#99000000" />
            <corners android:radius="@*android:dimen/qs_corner_radius_right" />
            <padding
                android:left="20dp"
                android:right="20dp" />
        </shape>
    </item>
</layer-list>
