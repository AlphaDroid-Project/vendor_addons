<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0.0"
                android:endColor="@*android:color/qs_color_accent_secondary"
                android:startColor="@*android:color/qs_color_accent_primary" />
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/qs_color_inactive" />
            <corners
                android:bottomLeftRadius="@*android:dimen/qs_corner_radius_top"
                android:bottomRightRadius="@*android:dimen/qs_corner_radius_top"
                android:topLeftRadius="@*android:dimen/qs_corner_radius_right"
                android:topRightRadius="@*android:dimen/qs_corner_radius_right" />
            <padding
                android:left="20dp"
                android:right="20dp" />
        </shape>
    </item>
</layer-list>
