<?xml version="1.0" encoding="utf-8" ?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#00000000" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/qs_color_inactive" />
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" />
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:end="4dp"
        android:start="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/qs_color_inactive" />
            <corners android:radius="@*android:dimen/qs_corner_radius_left" />
        </shape>
    </item>
</ripple>
