<?xml version="1.0" encoding="utf-8" ?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
       android:inset="4dp">
    <ripple android:color="?android:colorControlHighlight">
        <item android:id="@*android:id/mask">
            <shape android:shape="rectangle">
                <solid android:color="#00000000" />
                <corners android:radius="@*android:dimen/qs_corner_radius_top" />
            </shape>
        </item>
        <item>
            <shape>
                <stroke android:width="3.5dp"
                        android:color="@*android:color/qs_color_accent_primary" />
                <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                <solid android:color="@*android:color/qs_color_accent_secondary" />
            </shape>
        </item>
        <item>
            <shape android:tintMode="multiply">
                <solid android:color="#40000000" />
                <corners android:radius="@*android:dimen/qs_corner_radius_top" />
            </shape>
        </item>
    </ripple>
</inset>
