<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle"
                    android:tintMode="src_atop">
                    <gradient
                        android:angle="315.0"
                        android:endColor="@android:color/system_neutral2_400"
                        android:startColor="@android:color/system_neutral2_600" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item
                android:bottom="3dp"
                android:end="40dp"
                android:top="6dp">
                <shape
                    android:shape="rectangle"
                    android:tintMode="src_atop">
                    <solid android:color="@*android:color/qs_color_inactive" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item
                android:bottom="6dp"
                android:start="40dp"
                android:top="3dp">
                <shape
                    android:shape="rectangle"
                    android:tintMode="src_atop">
                    <solid android:color="@*android:color/qs_color_inactive" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
