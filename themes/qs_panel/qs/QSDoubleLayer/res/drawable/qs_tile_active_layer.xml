<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:tintMode="src_atop">
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
            <gradient
                android:angle="0.0"
                android:endColor="@*android:color/qs_color_accent_secondary"
                android:startColor="@*android:color/qs_color_accent_primary" />
        </shape>
    </item>
    <item>
        <shape android:tintMode="multiply">
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
            <solid android:color="#40000000" />
        </shape>
    </item>
    <item
        android:bottom="4.0dp"
        android:end="4.0dp"
        android:start="4.0dp"
        android:top="4.0dp">
        <shape android:tintMode="src_atop">
            <corners android:radius="@*android:dimen/qs_corner_radius_right" />
            <gradient
                android:angle="0.0"
                android:endColor="@*android:color/qs_color_accent_secondary"
                android:startColor="@*android:color/qs_color_accent_primary" />
        </shape>
    </item>
</layer-list>
