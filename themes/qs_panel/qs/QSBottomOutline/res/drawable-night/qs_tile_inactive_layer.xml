<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="90.0"
                        android:endColor="@android:color/system_neutral2_400"
                        android:startColor="@android:color/system_neutral2_600" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="#1A000000" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item android:bottom="4.5dp">
                <shape android:tintMode="src_atop">
                    <solid android:color="@*android:color/qs_color_inactive" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>

