<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="@android:color/system_neutral2_10" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="#1AFFFFFF" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape android:tintMode="src_atop">
                    <gradient
                        android:angle="0.0"
                        android:endColor="@android:color/system_accent1_100"
                        android:startColor="@*android:color/qs_color_accent_secondary" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item>
                <shape android:tintMode="multiply">
                    <solid android:color="#40FFFFFF" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
