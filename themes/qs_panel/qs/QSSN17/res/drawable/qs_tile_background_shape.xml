<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:tintMode="src_atop">
            <solid android:color="@drawable/color_background_alpha" />
            <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="multiply">
                    <solid android:color="@drawable/color_background_alpha" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
            <item>
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="0.0"
                        android:endColor="@drawable/holo_green_light_alpha"
                        android:startColor="@drawable/holo_blue_light_alpha" />
                    <corners android:radius="@*android:dimen/harmful_app_name_padding_top" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
