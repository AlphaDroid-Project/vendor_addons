<?xml version="1.0" encoding="utf-8" ?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="4dp">
    <ripple android:color="?android:colorControlHighlight">
        <item android:id="@*android:id/mask">
            <shape android:shape="rectangle">
                <solid android:color="#00000000" />
                <corners android:radius="@*android:dimen/qs_corner_radius_top" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                <solid android:color="@*android:drawable/color_background_alpha" />
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                <solid android:color="#1AFFFFFF" />
            </shape>
        </item>
        <item
            android:bottom="4.0dip"
            android:end="4.0dip"
            android:start="4.0dip"
            android:top="4.0dip">
            <shape android:shape="rectangle">
                <corners android:radius="@*android:dimen/qs_corner_radius_left" />
                <gradient
                    android:angle="0.0"
                    android:endColor="#4D000000"
                    android:startColor="#4D000000" />
            </shape>
        </item>
    </ripple>
</inset>
