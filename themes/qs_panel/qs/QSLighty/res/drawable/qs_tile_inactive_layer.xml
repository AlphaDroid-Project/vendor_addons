<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="multiply">
                    <solid android:color="@*android:color/qs_color_inactive" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item
                android:bottom="2.0dp"
                android:end="2.0dp"
                android:start="2.0dp"
                android:top="2.0dp">
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="0.0"
                        android:endColor="#B3FFFFFF"
                        android:startColor="#99FFFFFF" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_right" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
