<?xml version="1.0" encoding="utf-8" ?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:inset="4dp">
    <ripple android:color="?android:colorControlHighlight">
        <item android:id="@*android:id/mask">
            <shape android:shape="rectangle">
                <solid android:color="#00000000" />
                <corners android:radius="@*android:dimen/qs_corner_radius_top" />
            </shape>
        </item>
        <item>
            <shape>
                <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                <gradient
                    android:angle="315.0"
                    android:endColor="@*android:drawable/color_accent_secondary_alpha"
                    android:startColor="@*android:drawable/color_accent_primary_alpha" />
            </shape>
        </item>
        <item
            android:bottom="4.0dp"
            android:end="4.0dp"
            android:start="4.0dp"
            android:top="4.0dp">
            <shape>
                <corners android:radius="@*android:dimen/qs_corner_radius_left" />
                <gradient
                    android:angle="0.0"
                    android:endColor="#4D000000"
                    android:startColor="#4D000000" />
            </shape>
        </item>
    </ripple>
</inset>
