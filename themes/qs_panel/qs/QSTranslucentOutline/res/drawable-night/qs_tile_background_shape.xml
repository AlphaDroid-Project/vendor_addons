<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="@*android:drawable/color_background_alpha" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="#1AFFFFFF" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item
                android:bottom="4.0dp"
                android:end="4.0dp"
                android:start="4.0dp"
                android:top="4.0dp">
                <shape android:tintMode="src_atop">
                    <gradient
                        android:angle="0.0"
                        android:endColor="#4D000000"
                        android:startColor="#4D000000" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_left" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="315.0"
                        android:endColor="@*android:drawable/color_accent_secondary_alpha"
                        android:startColor="@*android:drawable/color_accent_primary_alpha" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item
                android:bottom="4.0dp"
                android:end="4.0dp"
                android:start="4.0dp"
                android:top="4.0dp">
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="0.0"
                        android:endColor="#4D000000"
                        android:startColor="#4D000000" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_left" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
