<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="@android:color/system_neutral2_10" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item>
                <shape android:tintMode="src_atop">
                    <solid android:color="#1A000000" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item android:gravity="left|center">
                <shape android:tintMode="src_atop">
                    <solid android:color="@android:color/system_neutral2_10" />
                    <corners
                        android:bottomLeftRadius="@*android:dimen/qs_corner_radius_top"
                        android:topLeftRadius="@*android:dimen/qs_corner_radius_top" />
                    <size android:width="52.0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="multiply">
                    <solid android:color="?android:colorSecondary" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item android:gravity="left|center">
                <shape android:tintMode="multiply">
                    <solid android:color="?android:colorPrimary" />
                        android:bottomLeftRadius="@*android:dimen/qs_corner_radius_top"
                        android:topLeftRadius="@*android:dimen/qs_corner_radius_top" />
                    <corners
                        android:bottomLeftRadius="@*android:dimen/qs_corner_radius_top"
                        android:topLeftRadius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
