<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:tintMode="src_atop">
            <solid android:color="@*android:drawable/color_background_alpha" />
            <corners android:radius="@*android:dimen/qs_corner_radius_top" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:tintMode="multiply">
                    <solid android:color="@*android:drawable/color_background_alpha" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
            <item>
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="0.0"
                        android:endColor="@*android:drawable/color_accent_secondary_alpha"
                        android:startColor="@*android:drawable/color_accent_primary_alpha" />
                    <corners android:radius="@*android:dimen/qs_corner_radius_top" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
