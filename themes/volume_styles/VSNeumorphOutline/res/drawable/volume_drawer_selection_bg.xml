<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingMode="stack">
    <item
        android:width="@dimen/volume_ringer_drawer_item_size"
        android:height="@dimen/volume_ringer_drawer_item_size">
        <layer-list>
            <item>
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="270.0"
                        android:endColor="@*android:color/qs_color_accent_secondary"
                        android:startColor="@*android:color/qs_color_accent_primary" />
                    <corners android:radius="@dimen/volume_ringer_drawer_item_size_half" />
                </shape>
            </item>
            <item
                android:bottom="2.0dip"
                android:end="2.0dip"
                android:gravity="fill_horizontal|center"
                android:start="2.0dip"
                android:top="2.0dip">
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="0"
                        android:endColor="@*android:color/qs_color_accent_secondary"
                        android:startColor="@*android:color/qs_color_accent_primary"
                        android:type="linear" />
                    <corners android:radius="@dimen/volume_ringer_drawer_item_size_half" />
                </shape>
            </item>
            <item
                android:bottom="4.0dip"
                android:end="4.0dip"
                android:gravity="fill_horizontal|center"
                android:start="4.0dip"
                android:top="4.0dip">
                <shape android:tintMode="multiply">
                    <gradient
                        android:angle="180"
                        android:endColor="#FFF0F0F0"
                        android:startColor="#FFD4D4D4"
                        android:type="linear" />
                    <corners android:radius="@dimen/vs_dialog_slider_corner_radius_small" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>
